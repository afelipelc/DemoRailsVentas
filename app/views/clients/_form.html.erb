<%# Ver CSS http://getbootstrap.com/css/%>
<%= form_for @client, :html => { :role=>"form", :class=>"form-horizontal" } do |f| %>

  <div class="form-group<%= @client.errors[:nombre].any? ? " has-error has-feedback" : "" %>">
    <%= f.label :nombre, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nombre, :class => 'form-control' %>
      <%#Obtener solo el mensaje con la expresion regular /\w([^]*)/%>
      <%if @client.errors[:nombre].any? %>
        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
        <p class="bg-warning"><%= @client.errors[:nombre].to_s[/\w([^"]*)/] %></p>
      <% end -%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dirección, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :direccion, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :teléfono, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :telefono, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group <%= @client.errors[:email].any? ? " error" : "" %>">
    <%= f.label :email, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, :class => 'form-control' %>
      <span class="help-inline">
      <%= @client.errors[:email].any? ? @client.errors[:email].to_s[/\w([^"]*)/] : "" %></span>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clients_path, :class => 'btn btn-info' %>
  </div>
<% end %>
